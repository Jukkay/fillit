#include "../fillit.h"
#include <stdio.h>

int	main(int argc, char **argv)
{
	int			tetriscount;
	t_tetris	arr[27];
	t_tetris	*ptr;
	int			size;
	int			i;

	ptr = arr;
	i = 0;
	if (argc != 2)
		return (ft_puterror("Include ONE file name after the binary name."));
	tetriscount = ft_read_file(argc, argv, ptr);
	size = solve_tetris(arr);
	ft_print_square(arr, size, tetriscount);
	// printf("tetriscount: %d\n", scount);
	while (i < tetriscount)
	{
		printf("Tetrimino: %d\n", i + 1);
		print_bits((*ptr).shape, 15);
		printf("shape: %hu\n", (*ptr).shape);
		printf("size x: %d\n", (*ptr).size->x);
		printf("size y: %d\n", (*ptr).size->y);
		free((*ptr).size);
		printf("pos x: %d\n", (*ptr).pos->x);
		printf("pos y: %d\n", (*ptr).pos->y);
		free((*ptr).pos);
		printf("---------\n");
		i++;
		ptr++;
	}
	return (0);

}

